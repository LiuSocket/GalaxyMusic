/* 时间滑轨 */
#timeSlider::groove:horizontal{
	border:0px;
	border-radius:2px;
	width:400px;
	height:4px;
	background:rgba(255,255,255,50);
	margin:0px;
}
#timeSlider::sub-page:horizontal{
	background:rgba(221,0,27,255);
	border:0px;
	border-radius:2px;
}
#timeSlider::handle:horizontal {
    width: 22px;
	margin: -9px -9px;
	border-style: none;
	background:transparent;
	background-image: url(:/Resources/slider_handle.png);
}
#timeSlider::handle:horizontal:hover {
	background-image: url(:/Resources/slider_handle_hover.png);
}

/* 音量控件背景 */
#GMVolumeWidget{
	background:transparent;
}

#volumeLab{
	background:transparent;
	background-image: url(:/Resources/volumeLab.png);
}

/* 音量滑轨 */
#volumeSlider::groove:vertical{
	border:0px;
	border-radius:2px;
	width:4px;
	height:100px;
	background:rgba(255,255,255,50);
	margin:0px;
}
#volumeSlider::add-page:vertical{
	background:rgba(221,0,27,255);
	border:0px;
	border-radius:2px;
}
#volumeSlider::handle:vertical {
    height: 22px;
	margin: -9px -9px;
	background:transparent;
	background-image: url(:/Resources/slider_handle.png);
	border-style: none;
}
#volumeSlider::handle:vertical:hover {
	background-image: url(:/Resources/slider_handle_hover.png);
}
QWidget:focus{outline: none;}  /*remove all  QWidget's focus border*/

QWidget{
	background: #101010;
	color: #F0F0F0;
	selection-background-color:#3daee9;
    selection-color: #333333;
	alternate-background-color: #30CCC1;
}

QPushButton {
	background: #101010;
	color: #F0F0F0;
	background-repeat: no-repeat;
	border-style: none;
}
QPushButton:hover {
	color: #FF0000;
}
QPushButton:pressed {
	color: #FF0505;
}

QPushButton:checked {
	color: #8F05F5;
}
QPushButton:checked:hover {
	color: #FFF000;
}
QPushButton:checked:pressed {
	color: #F00505;
}

